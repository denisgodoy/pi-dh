<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/user-profile/global.css" />
    <link rel="stylesheet" href="/stylesheets/user-profile/dashboard.css" />
    <link rel="shortcut icon" href="/images/favicon.png" />

    <script
      defer
      src="/node_modules/@fortawesome/fontawesome-free/js/brands.js"
    ></script>
    <script
      defer
      src="/node_modules/@fortawesome/fontawesome-free/js/solid.js"
    ></script>
    <script
      defer
      src="/node_modules/@fortawesome/fontawesome-free/js/fontawesome.js"
    ></script>

    <title>elevel - Dashboard Professor</title>
  </head>

  <body>
    <%- include('partials/aside'); %>

    <div class="main">
      <div class="notification">
        <img src="/images/avatar.png" class="avatar" alt="avatar" />
        <span class="badge">ðŸ””</span>
      </div>

      <h2>Dashboard / Perfil</h2>

      <form action="" id="profileForm">
        <span id="updateError" class="error"></span>
        <input
          type="text"
          name="idUser"
          id="idUser"
          value="<%= user.idUser %>"
          class="error"
        />
        <input
          type="text"
          name="userType"
          id="userType"
          value="<%= user.tipoUser %>"
          class="error"
        />
        <label for="nome">Nome * </label>
        <span id="nameError" class="error"></span>
        <input
          type="text"
          name="nome"
          id="nome"
          placeholder="Nome"
          value="<%= user.nome %>"
        />
        <label for="sobrenome">Sobrenome *</label>
        <span id="lastNameError" class="error"></span>
        <input
          type="text"
          name="sobrenome"
          id="sobrenome"
          placeholder="Sobrenome"
          value="<%= user.sobrenome %>"
        />
        <label for="email">E-mail *</label>
        <span id="emailError" class="error"></span>

        <input
          type="email"
          name="email"
          id="email"
          placeholder="E-mail"
          value="<%= user.email %>"
        />
        <label for="profile-image">Imagem de perfil</label>
        <input type="file" id="profile-image" name="profile-image" />

        <div class="password-group">
          <label for="password">Alterar senha </label>
          <span id="passwordError" class="error"></span>
          <input
            class="styled-input"
            type="password"
            name="senha"
            id="senha"
            placeholder="Crie uma senha"
          />
          <label for="password">Confirme a nova senha </label>
          <span id="passwordConfirmationError" class="error"></span>
          <input
            class="styled-input"
            type="password"
            name="confirmacaoSenha"
            id="confirmacaoSenha"
            placeholder="Confirme sua senha"
          />
        </div>
        <button class="btn" type="submit">Atualizar perfil</button>
      </form>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>
    <script src="../js/user/profile.js"></script>
  </body>
</html>
